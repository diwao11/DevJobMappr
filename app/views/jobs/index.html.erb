<h1>Jobs</h1>
<%@jobs.each do |job| %>
<%= job.job_title %>
<%= job.latitude %>
<%= job.longitude %>
<%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>
<% end %>

<%= link_to_modal 'New Job', new_job_path, :class=>"button tiny" %>
<br>

<% if user_signed_in? %>
Signed in as <%= current_user.email %>. Not you?
<%= link_to "Sign Out", destroy_user_session_path,:method => :delete %>
<% else %>
<%= link_to_modal "Sign Up", new_user_registration_path %> or
<%= link_to_modal "Sign In", new_user_session_path %>

<% end %>