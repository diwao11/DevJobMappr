    {"featureType": "poi.medical","elementType": "geometry","stylers": [{"color": "#fbd3da"}]},{"featureType": "poi.business","stylers": [{"visibility": "off"}]},{"featureType": "road","elementType": "geometry.stroke","stylers": [{
    "visibility": "off"}]},{"featureType": "road","elementType": "labels","stylers": [{"visibility": "off"}]},{"featureType": "road.highway","elementType": "geometry.fill","stylers": [{"color": "#ffe15f"}]},{"featureType": "road.highway","elementType": "geometry.stroke","stylers": [{"color": "#efd151"}]},{"featureType": "road.arterial","elementType": "geometry.fill","stylers": [{"color": "#ffffff"}]},{"featureType": "road.local","elementType": "geometry.fill","stylers": [{"color": "black"}]},{"featureType": "transit.station.airport","elementType": "geometry.fill","stylers": [{"color": "#cfb2db"}]}]
             
  // var last_marker;
  function initialize() {
    geocoder = new google.maps.Geocoder();
    var myLatLng = new google.maps.LatLng(34.052197, -118.24176);

    var mapOptions = {
      zoom: 11,
      center: myLatLng,
      styles: stylesArray,
  }

  map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions); 
  
  var center;
    function calculateCenter() {
      center = map.getCenter();
    }
    google.maps.event.addDomListener(map, 'idle', function() {
      calculateCenter();
    });
    google.maps.event.addDomListener(window, 'resize', function() {
      map.setCenter(center);
    });

 }

  // create a function that takes in argument 'x' from the click of the button and call is made through the GET and then after it gets a response it runs on mapMaker on line 31.

  function loadData() {
    var heatMapData = [];
    var i, newMarker;
      for (i=0; i < jobs_array.length; i++) {
        newMarker = new google.maps.Marker({
        position: new google.maps.LatLng(jobs_array[i].latitude, jobs_array[i].longitude),
        map: map, 
        });
        google.maps.event.addListener(newMarker, 'click', (newMarker, i));   
        heatMapData.push(newMarker);    
      }
    var heatmap = google.maps.visualization.HeatmapLayer({
      data: heatMapData, 
      map: map
    });
  }

  function toggleHeatmap() {
    heatmap.setMap(heatmap.getMap() ? null : map);
  }

  function searchMap(x) {
    $.ajax ({
      type:"GET", 
      dataType: "json",
      url: "<%= map_jobs_search_path %>?category="+x,
    }).done(function(msg){
      mapMaker(msg);
    });
  }

  function indeedJobs() {
    $.ajax ({
      type:"GET", 
      dataType: "json",
      url: "http://api.indeed.com/ads/apisearch?publisher=9335086191163405&q=web+developer&l=los+angeles%2C+ca&v=2&format=json&latlong=1&radius=30&limit=30&callback=?&fromage=30", 
      }).done(function(data){
        mapIndeed(data);
      });
    }

   function jobSearchMap(x) {
    $.ajax ({
      type:"GET", 
      url: "<%= map_experience_search_path %>?category="+x,
    }).done(function(msg){
      mapMaker(msg);
    });
  }

  //this is a function mapMaker that takes the JSON and then plots the map. 
  function mapMaker(jobs_array){
    console.log(jobs_array);
    //for loop to place each marker with stored information. 
    var i, newMarker;
    var infowindow = new google.maps.InfoWindow();
    
    for (i=0; i < jobs_array.length; i++) {
      newMarker = new google.maps.Marker({
        position: new google.maps.LatLng(jobs_array[i].latitude, jobs_array[i].longitude),
        map: map, 
        title: (jobs_array[i].job_title),
        // animation: google.maps.Animation.DROP
        });
        google.maps.event.addListener(newMarker, 'click', (function(newMarker, i) {
          return function() {
            infowindow.setContent(jobs_array[i].job_title + "<br/>" + jobs_array[i].company_name + "<br/>" +  '<a href="' + jobs_array[i].job_link + '" target="blank">Link to Job</a>');
            infowindow.open(map, newMarker);
          }
        })(newMarker, i));   
      //push items into an array
      markers.push(newMarker);    
    };
  }

  function mapIndeed(jobs_array){
    //for loop to place each marker with stored information. 
    var i, newMarker;
    var infowindow = new google.maps.InfoWindow();
    
    for (i=0; i < jobs_array["end"]-1; i++) {
      newMarker = new google.maps.Marker({
        position: new google.maps.LatLng(jobs_array["results"][i]["latitude"], jobs_array["results"][i]["longitude"]),
        map: map, 
        title: (jobs_array["results"][i]["jobtitle"]),
        });
        google.maps.event.addListener(newMarker, 'click', (function(newMarker, i) {
          return function() {
            infowindow.setContent(jobs_array["results"][i]["jobtitle"] + "<br>" + jobs_array["results"][i]["company"] + "<br>" + '<a href="' + jobs_array["results"][i]["url"] + '" target="blank">Link to Job</a>');
            infowindow.open(map, newMarker);
          }
        })(newMarker, i));   
      // push items into an array
      markers.push(newMarker);    
    };
  }
  
  //set map from array
  function setAllMap(map) {
    for (var i = 0; i < markers.length; i++) {
      markers[i].setMap(map);
    }
  }

  //clear the map
  function clearIt() {
    setAllMap(null);
  }

google.maps.event.addDomListener(window, 'page:change', initialize);
</script>

